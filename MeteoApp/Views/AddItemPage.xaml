<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoApp.AddItemPage">
    <Grid>
        <!-- Indicatore di caricamento -->
        <ActivityIndicator x:Name="LoadingIndicator"
                          IsVisible="False"
                          IsRunning="False"
                          Color="Blue"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />
                          
        <VerticalStackLayout Spacing="10" Padding="10">
            <!-- WebView con OpenStreetMap -->
            <WebView x:Name="MapWebView"
                    HeightRequest="500"
                    WidthRequest="400"
                    HorizontalOptions="FillAndExpand"
                    Navigated="OnWebViewNavigated"/>
                    
            <!-- Etichetta per il nome della cittÃ  -->
            <Label x:Name="CityLabel"
                  Text="Seleziona una posizione sulla mappa"
                  FontSize="20"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"/>
                  
            <!-- Aggiunta di coordinate di debug per verificare che funzioni -->
            <Label x:Name="CoordinatesLabel"
                  Text="Coordinate: -"
                  FontSize="14"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>