<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoApp.MeteoItemPage">

    <ContentPage.Background>
        <LinearGradientBrush>
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="#304FFE" Offset="0.0"/>
                <GradientStop Color="#00BCD4" Offset="1.0"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="30">
       
        <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
            <Label Text="{Binding Location.Name}"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>

            <Label Text="{Binding Weather.Description}"
                   FontSize="18"
                   FontAttributes="Italic"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   Margin="0,5,0,20"/>
        </StackLayout>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
       
            <Image Source="{Binding WeatherIconUrl}" 
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center"
                   Margin="10"/>
            <Label Text="{Binding Temperature.Current, StringFormat='{0}°'}"
                   FontSize="64"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>
        <Grid VerticalOptions="End"
              Padding="20" Margin="10"
              ColumnDefinitions="*,*">
       
            <Border Stroke="LightBlue"
                    StrokeThickness="3"
                    BackgroundColor="Transparent"
                    Padding="8"
                    Grid.Column="0"
                    HorizontalOptions="Center">
                <Label Text="{Binding Temperature.Min, StringFormat='{0}°'}"
                       FontSize="24"
                       TextColor="LightBlue"
                       HorizontalOptions="Center"/>
            </Border>
            <Border Stroke="Red"
                    StrokeThickness="3"
                    BackgroundColor="Transparent"
                    Padding="8"
                    Grid.Column="1"
                    HorizontalOptions="Center">
                <Label Text="{Binding Temperature.Max, StringFormat='{0}°'}"
                       FontSize="24"
                       TextColor="Red"
                       HorizontalOptions="Center"/>
            </Border>
        </Grid>

    </Grid>
</ContentPage>
